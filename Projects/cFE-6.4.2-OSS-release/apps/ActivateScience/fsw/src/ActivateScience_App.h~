typedef struct
{

	uint8 TlmHeader[CFE_SB_CMD_HDR_SIZE];
	
	uint8 CmdCounter;
	uint8 ErrCounter;

} ActivateScience_ActivateSciencePacket_t;

typedef struct
{
	// Command interface counters
	uint8 CmdCounter;
	uint8 ErrCounter;
	
	// Housekeeping telemetry packet
	ActivateScience_ActivateSciencePacket_t ActivateSciencePacket;
	
	CFE_SB_MsgPtr_t	MsgPtr;
	CFE_SB_PipeId_t RecvPipe;
	CFE_SB_PipeId_t ActivateSciencePipe; // Pipe Identifier
	
	// App status
	uint32 RunStatus;
	
	// Pipe Data
	char PipeName[16];
	uint16 PipeDepth;
	
} ActivateScience_AppData_t;


